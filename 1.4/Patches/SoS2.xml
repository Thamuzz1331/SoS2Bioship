<Patch>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="HiTechResearchBench"]/comps/li/linkableFacilities</xpath>
		<value>
			<li>ShipfleshAnalysisStation</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Save Our Ship 2</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[comps/li[@Class!="CompProperties_ShipBodyPart"] and thingClass!="Building_ShipHeart" and comps/li[@Class="CompProperties_ShipHeat"] and not(contains(defName, "_Insensate"))]/comps</xpath>
			<value>
				<li Class="CompProperties_EatMe"/>
			</value>
		</match>
	</Operation>
</Patch>